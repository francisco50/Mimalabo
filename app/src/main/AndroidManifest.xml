<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mimalabo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".RecommendationActivity" />
        <activity android:name=".CityToursActivity" />
        <activity android:name=".PictureGalleryActivity" />
        <activity android:name=".MoreAppsActivity" />
        <activity android:name=".FeedbackActivity" />
        <activity android:name=".HelpActivity" />
        <activity
            android:name=".DetailsActivities.Activity_urban_detail"
            android:label="@string/Urban_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>
        <activity
            android:name=".DetailsActivities.CultureDetailActivity"
            android:label="@string/Tribe_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>
        <activity
            android:name=".DetailsActivities.Activity_restaurant_detail"
            android:label="@string/res_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>
        <activity
            android:name=".DetailsActivities.Activity_places_detail"
            android:label="@string/places_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>
        <activity
            android:name=".DetailsActivities.HotelDetailActivity"
            android:label="@string/hotel_details">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlacesActivity" />
        </activity>
        <activity
            android:name=".PlacesActivity"
            android:label="@string/know_malabo">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>