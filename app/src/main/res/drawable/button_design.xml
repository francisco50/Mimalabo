        android:angle="45"
        android:centerX="35%"
        android:centerColor="#E3F1F8"
        android:startColor="#E8E8E8"
        android:endColor="#00BCD4"
        android:type="linear"


        />
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"
        />
