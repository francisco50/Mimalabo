<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".DetailsActivities.Activity_places_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPeople"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <TextView
            android:id="@+id/places_textname"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0D0E0E"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


        <ImageView
            android:id="@+id/places_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/places_textdescrip"
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0F1010"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


        <Button
            android:id="@+id/map_cordinates"
            android:onClick="displayMap"
            android:text="@string/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>





</ScrollView>