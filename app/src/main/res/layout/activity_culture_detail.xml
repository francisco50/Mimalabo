<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:context=".DetailsActivities.CultureDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar4"
            android:background="@color/colorCulture"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


        <TextView
            android:id="@+id/detailculture_textname"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#131313"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:id="@+id/detailcultureimage"/>

        <TextView
            android:id="@+id/detail_culturedescrip"
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <Button
            android:id="@+id/map_cordinates"
            android:onClick="displayMap1"
            android:text="@string/maps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>





</ScrollView>