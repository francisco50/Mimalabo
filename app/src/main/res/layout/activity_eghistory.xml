<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EgHistoryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar10"
            android:background="@color/colorCulture"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>



        <TextView
            android:id="@+id/egHistName"
            android:text="@string/guinea_ecuatorial_nombre"
            android:textSize="25sp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#131313"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/equatorialguinea"
            android:padding="1dp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/egHistImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="@string/population_title"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:textColor="#141515"
            android:textSize="18sp"
            android:shadowDy="1"
            android:text="@string/population"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/egTitle"
            android:text="@string/guinea_ecuatorial"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteTitle"
            android:padding="10dp"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/tierra"
            android:text="@string/tierra"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteTierra"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/alivio"
            android:text="@string/alivio_continental"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteAlivio"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:padding="10dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:shadowRadius="2"
            android:padding="10dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="@string/guinea_ecuatorial_insular"
            android:id="@+id/insular"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteInsular"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:id="@+id/clima"
            android:text="@string/clima"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parteClima"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="@string/vida_vegetal_y_animal"
            android:id="@+id/vida"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/partevegetal"
            android:shadowColor="#141515"
            android:padding="10dp"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textSize="15sp"
            android:textAlignment="gravity"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>


</ScrollView>