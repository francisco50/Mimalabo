<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="false"
    tools:context=".DetailsActivities.Activity_restaurant_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorFood"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <TextView
            android:id="@+id/resdetail_textname"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#131313"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>


        <ImageView
            android:id="@+id/resdetail_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/resdetail_textdescrip"
            android:textSize="15sp"
            android:layout_margin="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#0F1010"
            android:shadowRadius="2"
            android:shadowDx="1"
            android:shadowDy="1"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

    </LinearLayout>



</ScrollView>